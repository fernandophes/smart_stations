# Use an official Maven image as the base image
FROM maven:3.9.10-eclipse-temurin-21 AS dependencies

# Set the working directory in the container
WORKDIR /app

# Copy the pom.xml files to the container
COPY pom.xml .
COPY common/pom.xml common/pom.xml
COPY location_server/pom.xml location_server/pom.xml

# Build the application using Maven
RUN mvn -B -e org.apache.maven.plugins:maven-dependency-plugin:3.1.2:go-offline

FROM maven:3.9.10-eclipse-temurin-21 AS builder

# Set the working directory in the container
WORKDIR /app

# Copy the files to the container
COPY --from=dependencies /root/.m2 /root/.m2
COPY --from=dependencies /app/ /app/

COPY common/src /app/common/src
COPY location_server/src /app/location_server/src

RUN mvn -B -e clean install -DskipTests

# Use an official OpenJDK image as the base image
FROM eclipse-temurin:21-jre

# Set the working directory in the container
WORKDIR /app

# Copy the built JAR file from the previous stage to the container
COPY --from=builder /app/target/*.jar app.jar

# Set the command to run the application
CMD ["java", "-jar", "location_server/app.jar"]
